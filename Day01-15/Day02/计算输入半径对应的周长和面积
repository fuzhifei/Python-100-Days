import math

radius = input('请输入圆的半径: ')
if radius.isdigit() == True:
    radius = float (radius)
    perimeter = 2 * math.pi * radius
    area = math.pi * radius * radius
    print('周长: %.2f' % (perimeter))
    print('面积: %.2f' % area)
elif radius.isalpha() == True:
    print("你输入的不是数字,是字母")
else:
    print("请输入正确的数据类型")
